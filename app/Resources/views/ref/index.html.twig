{% extends 'base.html.twig' %}

{% block body %}
    <h1>Refs list</h1>
{{ dump() }}
    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Author</th>
                <th>Name</th>
                <th>Description</th>
                <th>Publicationyear</th>
                <th>Tags</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for ref in refs %}
            <tr>
                <td><a href="{{ path('ref_show', { 'id': ref.id }) }}">{{ ref.id }}</a></td>
                <td>{{ ref.author.name }}</td>
                <td>{{ ref.name }}</td>
                <td>{{ ref.description }}</td>
                <td>{{ ref.publicationYear }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('ref_show', { 'id': ref.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('ref_edit', { 'id': ref.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('ref_new') }}">Create a new ref</a>
        </li>
    </ul>
{% endblock %}
